{
  "extends": "../../packages/config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2022"
    ],
    "types": [
      "@types/node",
      "@types/react",
      "@types/react-dom",
      "next/types/global"
    ],
    "baseUrl": ".",
    "paths": {
      "@repo/*": [
        "../../packages/*"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "pages",
    "types"
  ]
}
