{
  "name": "education-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev:inmem": "USE_IN_MEMORY_DB=1 ts-node -r tsconfig-paths/register src/main.ts",
    "dev:oracle": "USE_IN_MEMORY_DB=1 PORT=3000 ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/main.ts",
    "dev:pm2": "pm2 start ecosystem.config.js && pm2 logs education-api",
    "test:inmem": "USE_IN_MEMORY_DB=1 jest --config ./jest.config.cjs --runInBand --detectOpenHandles",
    "build": "tsup src/main.ts --format cjs --out-dir dist --clean",
    "start": "node dist/main.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "test": "jest --passWithNoTests",
    "test:jest": "jest --runInBand",
    "test:vitest": "vitest run -c vitest.security.config.ts",
    "test:all": "pnpm test:jest && pnpm test:vitest",
    "test:e2e:jest": "jest --config ./jest.config.cjs --runInBand",
    "test:e2e:inmem": "USE_IN_MEMORY_DB=1 jest --config ./test/jest-e2e.json",
    "lint:fix": "eslint \"../../**/*.{ts,tsx,js,jsx}\" --fix --max-warnings=0 && prettier --write \"../../**/*.{ts,tsx,js,jsx,json,md}\"",
    "seed:inmem": "USE_IN_MEMORY_DB=1 ts-node -r tsconfig-paths/register src/prisma/seed-inmem.ts",
    "test:coverage": "USE_IN_MEMORY_DB=1 jest --config ./jest.config.cjs --coverage --coverageDirectory=coverage --runInBand",
    "db:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./drizzle.config.ts",
    "db:seed": "ts-node -r tsconfig-paths/register src/db/seed.ts",
    "align:demo": "ts-node -r tsconfig-paths/register src/media/demo-align.ts",
    "translate:demo": "ts-node -r tsconfig-paths/register src/services/translate.demo.ts --lang=hi",
    "tts:demo": "ts-node -r tsconfig-paths/register src/workers/tts.demo.ts"
  },
  "dependencies": {
    "@fastify/helmet": "^12.0.1",
    "@nestjs/common": "*",
    "@nestjs/config": "*",
    "@nestjs/core": "*",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "*",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/swagger": "*",
    "@opentelemetry/auto-instrumentations-node": "^0.62.2",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/resources": "^1.28.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-base": "^1.28.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@prisma/client": "*",
    "@sentry/node": "^8.31.0",
    "bullmq": "5.58.4",
    "class-transformer": "*",
    "class-validator": "*",
    "cors": "^2.8.5",
    "drizzle-orm": "0.34.1",
    "expo-server-sdk": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "*",
    "jsonwebtoken": "*",
    "meilisearch": "*",
    "nestjs-pino": "*",
    "nodemailer": "^6.9.13",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "8.16.3",
    "pino": "*",
    "pino-http": "*",
    "reflect-metadata": "*",
    "rxjs": "*",
    "web-push": "^3.6.7",
    "zod": "*"
  },
  "devDependencies": {
    "@nestjs/testing": "*",
    "@types/cors": "^2.8.17",
    "@types/jest": "*",
    "@types/jsonwebtoken": "*",
    "@types/node": "*",
    "@types/nodemailer": "7.0.1",
    "@types/passport": "*",
    "@types/passport-jwt": "*",
    "@types/pg": "8.15.5",
    "@types/supertest": "*",
    "drizzle-kit": "0.21.4",
    "jest": "*",
    "prettier": "^3.6.2",
    "prisma": "*",
    "supertest": "*",
    "ts-jest": "*",
    "ts-node": "*",
    "ts-node-dev": "*",
    "tsconfig-paths": "*",
    "tsup": "*",
    "vitest": "^1.0.0"
  }
}
