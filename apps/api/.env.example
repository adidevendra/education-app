# Example environment for apps/api
# Copy to `.env.local` (development) or `.env.production` (production) and customize values.

PORT=3000
USE_IN_MEMORY_DB=1
DATABASE_URL="postgresql://user:password@localhost:5432/education"
REDIS_URL=redis://localhost:6379
# Canonical Meili config
MEILI_URL=http://127.0.0.1:7700
MEILI_MASTER_KEY="masterKey"

# Legacy fallbacks (kept for backward compatibility)
# These are read by the code if canonical names are absent
MEILI_HOST=http://127.0.0.1:7700
MEILI_KEY="masterKey"

JWT_SECRET=changeme
